<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.finalorder.FinalOrderActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_finalOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingEnd="11dp"
        tools:itemCount="5"
        tools:listitem="@layout/item_final_order"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_marginTop="22dp"
        android:layout_marginStart="22dp"

        app:layout_constraintTop_toBottomOf="@id/recyclerView_finalOrder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:text="@string/net_amount" />

            <TextView
                android:gravity="end"
                android:layout_marginEnd="22dp"
                android:layout_weight="1"
                android:id="@+id/finalPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:text="1000" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:text="CGST"/>

            <TextView
                android:gravity="end"
                android:layout_marginEnd="22dp"
                android:layout_weight="1"
                android:id="@+id/finalPricecgst"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:text="1000" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:text="SGST"/>

            <TextView
                android:gravity="end"
                android:layout_marginEnd="22dp"
                android:layout_weight="1"
                android:id="@+id/finalPricesgst"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:text="1000" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:text="@string/grand_amount" />

            <TextView
                android:gravity="end"
                android:layout_marginEnd="22dp"
                android:layout_weight="1"
                android:id="@+id/grandTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:text="1000" />
        </LinearLayout>

        <Button
            android:layout_marginTop="22dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="@string/place_order" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
